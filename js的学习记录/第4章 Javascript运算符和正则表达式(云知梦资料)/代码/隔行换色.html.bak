<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>index</title>
	<style>
		*{
			font-family: 微软雅黑;
		}
		.hcls{
			background: #ccc;	
		}

		.hcls:hover,h2:hover{
			background: #999;
		}

	</style>
</head>
<body>
	<script>
		for(i=0;i<10;i++){
			if(i%2==0){
				document.write('<h2 class="hcls">'+i+'</h2>');
			}else{
				document.write('<h2>'+i+'</h2>');
			}
		}
	</script>
</body>
</html>
